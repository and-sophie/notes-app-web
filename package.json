{
  "name": "notes-app-web",
  "version": "1.0.0",
  "description": "A small react-redux app for adding notes",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "update-snapshot": "jest --updateSnapshot",
    "lint": "esw src --ext jsx js",
    "clean": "rm -rf ./build",
    "build": "npm run clean && webpack",
