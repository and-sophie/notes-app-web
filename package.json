    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.x",
    "eslint-plugin-react": "^7.1.0",
    "eslint-watch": "^3.1.2",
    "file-loader": "^0.11.2",
    "jest": "^20.0.4",
    "react-test-renderer": "^15.6.1",
    "webpack": "^3.4.1"
  },
  "jest": {
    "verbose": true
  }
}
